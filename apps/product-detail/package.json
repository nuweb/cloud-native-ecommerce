{
  "name": "product-detail",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "projectType": "application",
    "sourceRoot": "apps/product-detail/src",
    "tags": ["scope:shop", "type:feature"],
    "targets": {
      "build": {
        "executor": "@nx/webpack:webpack",
        "options": {
          "target": "web",
          "outputPath": "dist/apps/product-detail",
          "webpackConfig": "apps/product-detail/webpack.config.ts",
          "index": "apps/product-detail/index.html",
          "main": "apps/product-detail/src/main.tsx",
          "tsConfig": "apps/product-detail/tsconfig.app.json",
          "assets": ["apps/product-detail/src/favicon.ico", "apps/product-detail/src/assets"],
          "styles": ["apps/product-detail/src/styles.css"]
        },
        "configurations": {
          "production": {
            "outputFilename": "[name].[contenthash].js"
          }
        },
        "outputs": ["{options.outputPath}"]
      },
      "serve": {
        "executor": "@nx/react:module-federation-dev-server",
        "options": {
          "buildTarget": "product-detail:build",
          "port": 4202,
          "host": "localhost"
        },
        "configurations": {
          "production": {
            "buildTarget": "product-detail:build:production"
          }
        }
      },
      "serve-static": {
        "executor": "@nx/web:file-server",
        "options": {
          "buildTarget": "product-detail:build",
          "port": 4202,
          "spa": true
        }
      }
    }
  },
  "dependencies": {
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-router-dom": "6.30.3"
  },
  "devDependencies": {
    "@org/models": "workspace:*",
    "@org/shop-data": "workspace:*",
    "@org/shop-feature-product-detail": "workspace:*",
    "@org/shop-shared-ui": "workspace:*",
    "typed-assert": "^1.0.9"
  }
}
